  - var metaDescription= "Learn about the Cognizant Data Modernization Platform, which allows businesses to access, structure and analyze the data that provides the greatest value."
  - var metaKeywords= "data platform, data modernization platform, bigdecisions"

block content
  +intro-panel({
    backgroundImage: "",
    logo: true,
    icon: "images/icons/icon-data-platform-white.svg",
    eyebrow: "DATA MODERNIZATION PLATFORM",
    headline: "Your biggest insights powered by BigDecisions&reg;",
    bodyCopy: "Access, structure and analyze the data that provides the greatest value.",
    button: false,
    url: "CHANGE_ME",
    buttonText: "CHANGE_ME"
