    else
      .bg-grd-dark-blue-dark.medium-pt3.bg-size-cover.lazyload(data-bg=item.backgroundImage)&attributes(attributes)
        +intro-panel-default(...elements)
  // -----  End of INTRO PANEL  -----------------------------------

