      a.link-coverAll(href!=attributes.href=item.link data-open!=attributes.data=item.revealID title=item.buttonText)!= item.buttonText


mixin additional-resource-tile(...elements)
  // 
    ===================================================================================
    ADDITIONAL RESOURCES
    ===================================================================================
  each item in elements
    if item.useVideo == false
      +additional-resource-tile-default(...elements)

    else
      +additional-resource-tile-default(...elements)
      .reveal.bd0.medium-p3.full.ease-in-out(id=item.revealID data-reveal data-animation-in="slide-in-right" data-animation-out="slide-out-right" data-reset-on-close="true")
        .plyr-video(data-plyr-provider="youtube" data-plyr-embed-id=item.youtubeUrl)
        button.close-button.z2(data-close=item.revealID aria-label="Close modal" type="button")
          h5.text-white
            span(aria-hidden="true") 
              i.close
  // -----  End of ADDITIONAL RESOURCES  -----------------------------------


