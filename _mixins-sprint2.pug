  each item in elements
    .cell.medium-auto.column-block.flex-basis-2col.bg-blue-dark.p2.hover-grow.bg-size-cover.relative.lazyload(data-bg=item.background)&attributes(attributes)
      p.small.font-wide.text-blue-bright(data-aos="fade-up")!= item.eyebrow
