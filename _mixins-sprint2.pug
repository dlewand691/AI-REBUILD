mixin caseStudy-index(...elements)
  // 
    ===================================================================================
    CASE STUDY TILE FOR INDEX PAGE
    ===================================================================================
  each item in elements
    div(class="small-" + item.smColumns class="medium-" + item.mdColumns class="large-" + item.lgColumns class="")&attributes(attributes)
      .grid-x.grid-padding-x.wh100.gradient-overlay-black.bg-blue-dark.panel-slide-down.hover-bg-grow(data-aos="fade-up")
        .cell.auto.small-order-2.medium-order-1.p1.large-p2.small-align-self-middle.medium-align-self-bottom.z1
          h6.mb0(data-aos="fade-up")!= item.eyebrow
          p.mb0.medium-mb2(data-aos="fade-up")!= item.headline
          a.small.arrow.p0.m0.font-wide.show-for-medium.link-coverAll(data-aos="fade-up")!= item.buttonText

        unless item.hoverContent == false
          // ===================================================================================
          // HOVER CONTENT
          // ===================================================================================
          .panel.wh100.p-half.relative
            .small-padding-collapse.bg-blue-dark.wh100.bd-radius-2
              .flex-container.wh100
                .card.bg-none.m0
                  .card-section
                    p!= item.hoverBodyCopy
                  .card-divider.pt0
                    a.small.m0.arrow.link-coverAll(href=item.url)!= item.hoverButtonText
        // ===================================================================================
        // BACKGROUND IMAGE
        // ===================================================================================
        img.lazyload.absolute.object-fit-cover.show-for-medium(data-sizes="auto" data-src=item.image alt=item.headline)
        .small-3.cell.small-order-1.py1.pl1.pr0.hide-for-medium
          img.w100.lazyload.object-fit-cover(data-sizes="auto" data-src=item.image alt=item.headline)
  // -----  End of CASE STUDY INDEX TILE  -----------------------------------


mixin caseStudy-tile(...elements)
  // 
    ===================================================================================
    CASE STUDY TILE, INDIVIDUAL LANDING PAGES
    ===================================================================================
  each item in elements
    .caseStudyTile.small-12.medium-6.large-6.cell.p1&attributes(attributes)
      .hover-grow(data-aos="fade-up")
        .flex-container.align-bottom.wh100.p1.text-white.bg-size-cover.gradient-overlay-black-full.lazyload(data-aos="fade-up" data-bg=item.image alt=item.title)
          .relative.z1.w100.medium-pt5
            h3.h5.pt5!= item.title
            .flex-container.align-justify.pt2
              a.small.arrow.font-wide.link-coverAll(href=item.url) VIEW CASE STUDY
  // -----  End of CASE STUDY TILE, INDIVIDUAL LANDING PAGES  -----------------------------------


mixin caseStudy-intro
  //
    ======================================================================
    CASE STUDY LANDING PAGE INTRO
    ======================================================================
  .cell.text-center
    img.mb1.lazyload(data-sizes="auto" data-src=eyebrowIcon  alt=headline)
    h1.p.font-wide.mb3
      span.text-bold AI IN ACTION 
      | | #{eyebrow}
    h2.h1.m0(data-aos="flip-hor-bottom-bck")!= headline
    +dividerDash
  .cell.medium-10.large-8.mb3
    unless introParagraph01 == ""
      p(data-aos="fade-right" data-aos-delay="1000")!= introParagraph01
    unless introParagraph02 == ""
      p(data-aos="fade-left" data-aos-delay="1500")!= introParagraph02

mixin ltCarousel(...elements)
  // 
    ===================================================================================
    LATEST THINKING CAROUSEL
    ===================================================================================
  each item in elements
    .swiper-slide
      unless item.image == ""
        img.lazyload(data-src=item.image)
      unless item.headline == ""
        h5!= item.headline
        p!= item.body
        a.arrow!= item.buttonText
      unless item.url == ""
        a.link-coverAll(href=item.url)
      // -----  End of LATEST THINKING CAROUSEL  -----------------------------------


